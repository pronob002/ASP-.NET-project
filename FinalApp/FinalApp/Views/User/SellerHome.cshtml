@{
    ViewData["Title"] = "Seller Home";
    var items = ViewBag.Items as IEnumerable<FinalApp.Models.Item>;
    var userId = ViewBag.UserId as Guid?;
    var userName = ViewBag.UserName as string;
    var profileImagePath = ViewBag.ProfileImagePath as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f4f7f6;
            color: #333;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-custom {
            background: #4a90e2;
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-nav .nav-link {
                color: #fff;
            }

                .navbar-custom .navbar-nav .nav-link:hover {
                    color: #e1e1e1;
                }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            background: #fff;
            padding: 20px;
            margin-bottom: 20px;
        }

            .card h1,
            .card h2 {
                color: #333;
                font-size: 1.5rem;
                margin-bottom: 15px;
            }

        .btn-primary {
            background-color: #1c84c6;
            border-color: #1c84c6;
            border-radius: 20px;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-primary:hover {
                background-color: #187cbb;
                border-color: #187cbb;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            border-radius: 20px;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #5a6268;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            border-radius: 20px;
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .item-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            background: #fff;
            transition: transform 0.3s, box-shadow 0.3s;
            display: flex;
            flex-direction: column;
            justify-content: space-between; 
            height: 350px; 
        }

            .item-card img {
                max-height: 150px;
                object-fit: cover;
                margin-bottom: 10px;
                width: 100%; 
            }

            .item-card h4 {
                color: #333;
                font-size: 1.25rem;
                margin-bottom: 10px;
            }

            .item-card p {
                color: #555;
                margin-bottom: 5px;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap; 
            }

            .item-card a {
                text-decoration: none;
                color: #4a90e2;
                font-weight: bold;
                transition: color 0.3s;
            }

                .item-card a:hover {
                    color: #357ab8;
                }

        .button-container {
            display: flex;
            gap: 10px; 
            margin-top: auto; 
        }

        .profile-image {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #fff;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .text-center {
            text-align: center;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .mt-4 {
            margin-top: 1.5rem;
        }

        hr {
            border: 0;
            border-top: 1px solid #e0e0e0;
            margin: 20px 0;
        }
    </style>
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">TradeStream</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">Logged in as: @userName</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger" href="/User/Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="card">
            <div class="text-center">
                @if (!string.IsNullOrEmpty(profileImagePath))
                {
                    <img src="@profileImagePath" alt="Profile Image" class="profile-image" />
                }
                <h1>Welcome, @userName!</h1>
                <p>You have successfully registered as a seller.</p>
                <div class="text-center mb-4">
                    <a href="/User/AddItem" class="btn btn-primary">Add New Item</a>
                    <a href="@Url.Action("EditProfile", new { userId = userId })" class="btn btn-secondary">Edit Profile</a>
                </div>
            </div>
        </div>
        <div class="text-center mb-4">
            <a href="/User/SeeCustomers" class="btn btn-primary">See Customers</a>
        </div>

        <div class="card">
            <h2>Your Items</h2>
            @if (items != null && items.Any())
            {
                <div class="row">
                    @foreach (var item in items)
                    {
                        <div class="col-md-4">
                            <div class="item-card">
                                @if (!string.IsNullOrEmpty(item.ItemImagePath))
                                {
                                    <img src="@item.ItemImagePath" alt="@item.ItemName" class="img-fluid mb-2" />
                                }
                                <h4>@item.ItemName</h4>
                                <p><strong>Price:</strong> $@item.Price</p>
                     



                                <div class="button-container">
                                    <a href="/User/EditItem/@item.ItemId" class="btn btn-secondary">Edit</a>
                                    <form asp-action="DeleteItem" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.ItemId" />
                                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-center">No items available.</p>
            }
        </div>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
