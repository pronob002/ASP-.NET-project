@model EditItemViewModel
<style>
    .edit-item-form {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: bold;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control,
    .form-control-file {
        border-radius: 4px;
        border: 1px solid #ced4da;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075);
    }

    .form-text {
        font-size: 0.875rem;
    }

    .existing-image {
        margin-top: 1rem;
        text-align: center;
    }

    .img-thumbnail {
        max-width: 200px;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 0.25rem;
        background-color: #fff;
    }

    .submit-btn {
        display: block;
        width: 100%;
        padding: 0.75rem;
        border-radius: 4px;
        border: none;
        font-size: 1rem;
    }

</style>

<form asp-action="EditItem" enctype="multipart/form-data">
    <input type="hidden" asp-for="ItemId" />

    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemImage">Upload new image (optional):</label>
        <input type="file" asp-for="ItemImage" class="form-control" />
        <span asp-validation-for="ItemImage" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ExistingItemImagePath))
    {
        <div>
            <img src="@Model.ExistingItemImagePath" alt="Existing item image" style="max-width: 200px;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
