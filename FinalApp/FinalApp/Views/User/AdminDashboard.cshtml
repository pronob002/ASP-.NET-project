@model FinalApp.ViewModels.AdminDashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #343a40;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .dashboard-container {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        h3 {
            font-size: 1.5rem;
            color: #343a40;
            margin-top: 30px;
            margin-bottom: 15px;
            font-weight: 500;
        }


        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table th, table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        table th {
            background-color: #007bff;
            color: #fff;
            font-weight: 600;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }


        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
            margin-top: 15px;
        }

        .logout-button {
            float: right;
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .logout-button:hover {
            background-color: #c82333;
        }


            h2 {
                font-size: 1.5rem;
            }

            table th, table td {
                padding: 10px;
                font-size: 0.875rem;
            }

            .btn {
                padding: 8px 15px;
                font-size: 0.875rem;
            }

            .logout-button {
                padding: 8px 15px;
                font-size: 0.875rem;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <button class="logout-button" onclick="location.href='@Url.Action("Logout", "User")'">Logout</button>
        <h2>Admin Dashboard</h2>

        <h3>Customers</h3>
        <table>
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Mobile Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.UserId</td>
                        <td>@customer.Name</td>
                        <td>@customer.Email</td>
                        <td>@customer.Age</td>
                        <td>@customer.Address</td>
                        <td>@customer.MobileNumber</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Sellers</h3>
        <table>
            <thead>
                <tr>
                    <th>Seller ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Mobile Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var seller in Model.Sellers)
                {
                    <tr>
                        <td>@seller.UserId</td>
                        <td>@seller.Name</td>
                        <td>@seller.Email</td>
                        <td>@seller.Age</td>
                        <td>@seller.Address</td>
                        <td>@seller.MobileNumber</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Items</h3>
        <table>
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ItemId</td>
                        <td>@item.ItemName</td>
                        <td>$@item.Price</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Item Purchase Quantities</h3>
        <table>
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Item ID</th>
                    <th>Total Quantity Sold</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var itemDetail in Model.ItemPurchaseDetails)
                {
                    <tr>
                        <td>@itemDetail.Value.ItemName</td>
                        <td>@itemDetail.Key</td>
                        <td>@itemDetail.Value.PurchaseCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
